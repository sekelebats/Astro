---

<header class="header">
  <div class="container">
    <div class="header-top">
      <h1 class="logo">
        <a href="/">ModernBlog</a>
      </h1>
      <button class="menu-toggle" id="menuToggle">
        <span class="menu-icon">☰</span>
        <span class="menu-close">✕</span>
      </button>
      <nav class="nav-desktop">
        <a href="/">Beranda</a>
        <a href="/tentang">Tentang</a>
        <a href="/kontak">Kontak</a>
        <div class="social-links">
          <a href="https://twitter.com" target="_blank" aria-label="Twitter">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
            </svg>
          </a>
          <a href="https://instagram.com" target="_blank" aria-label="Instagram">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
        </div>
      </nav>
    </div>
    
    <nav class="nav-mobile" id="navMobile">
      <a href="/">Beranda</a>
      <a href="/tentang">Tentang</a>
      <a href="/kontak">Kontak</a>
      <div class="social-links">
        <a href="https://twitter.com" target="_blank" aria-label="Twitter">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
          </svg>
        </a>
        <a href="https://instagram.com" target="_blank" aria-label="Instagram">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
      </div>
    </nav>
    
    <div class="search-bar">
      <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input type="search" placeholder="Cari artikel..." aria-label="Cari artikel">
    </div>
  </div>
</header>

<style>
  .header {
    background: white;
    border-bottom: 2px solid black;
  }
  
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1.5rem 1rem;
  }
  
  .header-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .logo {
    font-size: 1.875rem;
    font-weight: 700;
  }
  
  .logo a {
    color: black;
    text-decoration: none;
  }
  
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }
  
  .menu-close {
    display: none;
  }
  
  .nav-desktop {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  
  .nav-desktop a {
    color: black;
    text-decoration: none;
  }
  
  .nav-desktop a:hover {
    text-decoration: underline;
  }
  
  .social-links {
    display: flex;
    gap: 0.75rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 2px solid black;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: black;
  }
  
  .social-links a:hover {
    text-decoration: none;
    opacity: 0.7;
  }
  
  .nav-mobile {
    display: none;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid black;
  }
  
  .nav-mobile.active {
    display: flex;
  }
  
  .nav-mobile a {
    color: black;
    text-decoration: none;
  }
  
  .nav-mobile .social-links {
    border-left: none;
    border-top: 1px solid black;
    padding-left: 0;
    padding-top: 0.75rem;
    margin-left: 0;
    margin-top: 0.5rem;
  }
  
  .search-bar {
    margin-top: 1.5rem;
    position: relative;
  }
  
  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
  }
  
  .search-bar input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 3rem;
    border: 2px solid black;
    font-family: 'IBM Plex Mono', monospace;
  }
  
  .search-bar input:focus {
    outline: none;
  }
  
  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }
    
    .nav-desktop {
      display: none;
    }
  }
</style>

<script>
  const menuToggle = document.getElementById('menuToggle');
  const navMobile = document.getElementById('navMobile');
  const menuIcon = menuToggle?.querySelector('.menu-icon');
  const menuClose = menuToggle?.querySelector('.menu-close');
  
  menuToggle?.addEventListener('click', () => {
    navMobile?.classList.toggle('active');
    if (navMobile?.classList.contains('active')) {
      if (menuIcon) menuIcon.style.display = 'none';
      if (menuClose) menuClose.style.display = 'block';
    } else {
      if (menuIcon) menuIcon.style.display = 'block';
      if (menuClose) menuClose.style.display = 'none';
    }
  });
</script>
