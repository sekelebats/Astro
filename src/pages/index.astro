---
import BlogLayout from '../layouts/BlogLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { posts, categories } from '../data/posts';

const featuredPosts = posts.slice(0, 3);
---

<BlogLayout 
  title="ModernBlog - Berbagi Inspirasi & Pengetahuan"
  description="Platform berbagi pengetahuan seputar teknologi, bisnis, produktivitas, dan gaya hidup sehat"
>
  <Header />
  
  <main class="main-content">
    <div class="container">
      <div class="layout">
        <!-- Main Content -->
        <div class="content">
          <!-- Category Filter -->
          <div class="category-filter">
            {categories.map(cat => (
              <button class="category-btn" data-category={cat}>
                {cat}
              </button>
            ))}
          </div>

          <!-- Blog Posts -->
          <div class="posts-list">
            {posts.map(post => (
              <article class="post-item">
                <div class="post-layout">
                  <div class="post-image">
                    <img src={post.image} alt={post.title} />
                  </div>
                  <div class="post-content">
                    <div class="post-meta">
                      <span class="post-date">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        {new Date(post.date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
                      </span>
                      <span class="post-category">{post.category}</span>
                    </div>
                    
                    <h2 class="post-title">
                      <a href={`/blog/${post.slug}`}>{post.title}</a>
                    </h2>
                    
                    <p class="post-excerpt">{post.excerpt}</p>
                    
                    <div class="post-footer">
                      <span class="post-author">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        {post.author}
                      </span>
                      <a href={`/blog/${post.slug}`} class="read-more">
                        Baca Selengkapnya
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="sidebar">
          <!-- About Widget -->
          <div class="widget">
            <h3 class="widget-title">Tentang Blog</h3>
            <p class="widget-text">
              ModernBlog adalah platform berbagi pengetahuan seputar teknologi, bisnis, produktivitas, dan gaya hidup sehat. Kami berkomitmen memberikan konten berkualitas untuk pembaca Indonesia.
            </p>
          </div>

          <!-- Popular Posts -->
          <div class="widget">
            <h3 class="widget-title">Artikel Populer</h3>
            <div class="popular-posts">
              {featuredPosts.map(post => (
                <a href={`/blog/${post.slug}`} class="popular-post">
                  <img src={post.image} alt={post.title} />
                  <div class="popular-post-content">
                    <h4>{post.title}</h4>
                    <p>{new Date(post.date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- Categories -->
          <div class="widget">
            <h3 class="widget-title">Kategori</h3>
            <div class="categories">
              {categories.slice(1).map(cat => (
                <a href={`/kategori/${cat.toLowerCase()}`} class="category-link">{cat}</a>
              ))}
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>

  <Footer />
</BlogLayout>

<style>
  .main-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  @media (min-width: 1024px) {
    .layout {
      grid-template-columns: 2fr 1fr;
    }
  }
  
  .category-filter {
    background: white;
    border: 2px solid black;
    padding: 1rem;
    margin-bottom: 1.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .category-btn {
    padding: 0.5rem 1rem;
    border: 2px solid black;
    background: white;
    color: black;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .category-btn:hover,
  .category-btn.active {
    background: black;
    color: white;
  }
  
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .post-item {
    border-bottom: 2px solid black;
    padding-bottom: 2rem;
  }
  
  .post-item:last-child {
    border-bottom: none;
  }
  
  .post-layout {
    display: grid;
    gap: 1.5rem;
  }
  
  @media (min-width: 768px) {
    .post-layout {
      grid-template-columns: 2fr 3fr;
    }
  }
  
  .post-image img {
    width: 100%;
    height: 16rem;
    object-fit: cover;
    border: 2px solid black;
  }
  
  @media (min-width: 768px) {
    .post-image img {
      height: 100%;
    }
  }
  
  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
  }
  
  .post-date {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .post-category {
    padding: 0.25rem 0.75rem;
    background: black;
    color: white;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .post-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
  }
  
  .post-title a {
    color: black;
    text-decoration: none;
  }
  
  .post-title a:hover {
    text-decoration: underline;
  }
  
  .post-excerpt {
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }
  
  .post-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
  }
  
  .read-more {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: black;
    text-decoration: none;
    font-weight: 500;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
  
  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .widget {
    background: white;
    border: 2px solid black;
    padding: 1.5rem;
  }
  
  .widget-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .widget-text {
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .popular-posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .popular-post {
    display: flex;
    gap: 0.75rem;
    text-decoration: none;
    color: black;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid black;
  }
  
  .popular-post:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }
  
  .popular-post img {
    width: 5rem;
    height: 5rem;
    object-fit: cover;
    border: 1px solid black;
  }
  
  .popular-post-content {
    flex: 1;
  }
  
  .popular-post h4 {
    font-size: 0.875rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 0.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .popular-post:hover h4 {
    text-decoration: underline;
  }
  
  .popular-post p {
    font-size: 0.75rem;
  }
  
  .categories {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .category-link {
    padding: 0.5rem 1rem;
    border: 1px solid black;
    color: black;
    text-decoration: none;
    transition: all 0.2s;
  }
  
  .category-link:hover {
    background: black;
    color: white;
  }
</style>

<script>
  const categoryButtons = document.querySelectorAll('.category-btn');
  const posts = document.querySelectorAll('.post-item');
  
  categoryButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');
      
      categoryButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      posts.forEach(post => {
        const postCategory = post.querySelector('.post-category')?.textContent;
        if (category === 'Semua' || postCategory === category) {
          post.style.display = 'block';
        } else {
          post.style.display = 'none';
        }
      });
    });
  });
  
  // Set "Semua" as active by default
  categoryButtons[0]?.classList.add('active');
</script>
