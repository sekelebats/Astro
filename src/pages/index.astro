---
import { getCollection } from 'astro:content';
import BlogLayout from '../layouts/BlogLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by date descending
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const featuredPosts = sortedPosts.slice(0, 3);

const categories = ['Semua', 'Produktivitas', 'Bisnis', 'Teknologi', 'Kesehatan', 'Marketing'];
---

<BlogLayout 
  title="ModernBlog - Berbagi Inspirasi & Pengetahuan"
  description="Platform berbagi pengetahuan seputar teknologi, bisnis, produktivitas, dan gaya hidup sehat"
>
  <Header />
  
  <main class="main-content">
    <div class="container">
      <div class="layout">
        <div class="content">
          <div class="category-filter">
            {categories.map(cat => (
              <button class="category-btn" data-category={cat}>
                {cat}
              </button>
            ))}
          </div>

          <div class="posts-list">
            {sortedPosts.map(post => (
              <article class="post-item" data-category={post.data.category}>
                <div class="post-layout">
                  <div class="post-image">
                    <img src={post.data.image} alt={post.data.title} />
                  </div>
                  <div class="post-content">
                    <div class="post-meta">
                      <span class="post-date">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        {post.data.date.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
                      </span>
                      <span class="post-category">{post.data.category}</span>
                    </div>
                    
                    <h2 class="post-title">
                      <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                    </h2>
                    
                    <p class="post-excerpt">{post.data.description}</p>
                    
                    <div class="post-footer">
                      <span class="post-author">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        {post.data.author}
                      </span>
                      <a href={`/blog/${post.slug}`} class="read-more">
                        Baca Selengkapnya
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>

        <aside class="sidebar">
          <div class="widget">
            <h3 class="widget-title">Tentang Blog</h3>
            <p class="widget-text">
              ModernBlog adalah platform berbagi pengetahuan seputar teknologi, bisnis, produktivitas, dan gaya hidup sehat. Kami berkomitmen memberikan konten berkualitas untuk pembaca Indonesia.
            </p>
          </div>

          <div class="widget">
            <h3 class="widget-title">Artikel Populer</h3>
            <div class="popular-posts">
              {featuredPosts.map(post => (
                <a href={`/blog/${post.slug}`} class="popular-post">
                  <img src={post.data.image} alt={post.data.title} />
                  <div class="popular-post-content">
                    <h4>{post.data.title}</h4>
                    <p>{post.data.date.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <div class="widget">
            <h3 class="widget-title">Kategori</h3>
            <div class="categories">
              {categories.slice(1).map(cat => (
                <button class="category-link" data-category={cat}>{cat}</button>
              ))}
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>

  <Footer />
</BlogLayout>

<style>
  /* ... (sama seperti sebelumnya) ... */
</style>

<script>
  const categoryButtons = document.querySelectorAll('.category-btn, .category-link');
  const posts = document.querySelectorAll('.post-item');
  
  categoryButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');
      
      document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.category-btn[data-category="' + category + '"]').forEach(b => b.classList.add('active'));
      
      posts.forEach(post => {
        const postCategory = post.getAttribute('data-category');
        if (category === 'Semua' || postCategory === category) {
          post.style.display = 'block';
        } else {
          post.style.display = 'none';
        }
      });
    });
  });
  
  document.querySelector('.category-btn')?.classList.add('active');
</script>
